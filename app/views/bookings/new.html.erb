<div class="container">
  <h1>Book <%= @flat.title %></h1>

  <%= form_with model: [@flat, @booking], local: true do |f| %>
    <div class="field">
      <%= f.label :start_date %><br>
      <%= f.date_field :start_date %>
    </div>

    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.date_field :end_date %>
    </div>

    <div class="field">
      <%= f.label :guests %><br>
      <%= f.number_field :guests, min: 1 %>
    </div>

    <%= f.submit "Book this flat" %>
  <% end %>

  <p><%= link_to "Back to flat", flat_path(@flat) %></p>
</div>
