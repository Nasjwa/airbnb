<div class="container">
  <h1>Welcome to our airbnb app </h1>
  <div class="row mt-4 gx-3 gy-4">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card p-3 border h-100">
          <%= link_to flat_path(flat), class: "text-decoration-none text-dark" do %>
            <% if flat.photo.attached? %>
             <%= image_tag url_for(flat.photo), alt: flat.title, class: "img-fluid" %>
            <% else %>
              <p>No photo</p>
            <% end %>
            <h2 class="mt-2"><strong><%= flat.title %></strong></h2>
            <p><%= flat.description %></p>
            <p><strong>Location:</strong> <%= flat.location %></p>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= link_to "New Flat", new_flat_path %>
  </div>
</div>
