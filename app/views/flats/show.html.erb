<div class="container">
  <% if @flat.photo.attached? %>
             <%= image_tag url_for(@flat.photo), alt: @flat.title %>
            <% else %>
              <p>No photo</p>
            <% end %>
  <h2><%= @flat.title %></h2>
  <p><%= @flat.description %></p>
  <p><strong>Location:</strong> <%= @flat.location %></p>

  <%= link_to "Back to flats", flats_path %>

  <%= link_to "Book this flat", new_flat_booking_path(@flat) %>

  <%= link_to "Edit", edit_flat_path(@flat) %>

  <%= link_to "Delete", flat_path(@flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

</div>
